<div class="page-content">
  <h1>Login to Beta Blog</h1>

  <div class="container">

    <%= form_with(scope: :session, url: login_path, local: true ) do |f| %>
    <div class="input-group mb-4">
      <%= f.label :email, class: "col-2 form-label"  %>
      <div class="col-8">
        <%= f.email_field :email, class: "form-control shadow", placeholder: "Enter email address"  %>
      </div>
    </div>

    <div class="input-group mb-4">
      <%= f.label :password, class: "col-2 form-label"  %>
      <div class="col-8">
        <%= f.password_field :password, class: "form-control shadow", placeholder: "Enter your password"  %>
      </div>
    </div>

    <div class="d-grid gap-2 col-3 mx-auto">
      <%= f.submit 'Log in', class: "btn btn-outline-info btn-lg mb-3 shadow" %>
    <% end %>
      <%= link_to 'Cancel', articles_path, onclick: "return confirm('Are you sure to cancel?')", class: "btn btn-outline-danger btn-lg shadow" %>
    </div>
    
  </div>
</div>