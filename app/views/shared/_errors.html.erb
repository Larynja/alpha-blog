<div class="container">
    <% if obj.errors.any? %>
    <div class="alert alert-danger mb-5 alert-dismissible fade show error-container" role="alert">
        <h4>The following errors prevented the <%= obj.class.name.downcase %> from being saved:</h2>
        <ul>
            <% obj.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% end %>
</div>