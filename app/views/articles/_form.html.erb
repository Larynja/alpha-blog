<div class="container">

  <div class="d-grid gap-2 col-8 mx-auto">
    <%= render 'shared/errors', obj: @article %>
  </div>

  <%= form_with(model: @article, local: true ) do |f| %>
    <div class="input-group mb-4">
      <%= f.label :title, class: "col-2 form-label" %>
      <div class="col-8">
        <%= f.text_field :title, class: "form-control shadow", placeholder: "Title of article" %>
      </div>
    </div>

    <div class="input-group mb-4">
      <%= f.label :description, class: "col-2 form-label"  %>
      <div class="col-8">
        <%= f.text_area :description, rows: 10, class: "form-control shadow", placeholder: "Description of article"  %>
      </div>
    </div>

    <div class="input-group mb-4">
      <%= f.label :category, class: "col-2 form-label"  %>
      <div class="col-8">
        <%= f.collection_select(:category_ids, Category.all, :id, :name,
        {:prompt => "Select categories from the list (optional)"}, { multiple: true, size: 6, class: "form-control shadow"} ) %>
      </div>
    </div>

    <div class="d-grid gap-2 col-3 mx-auto m-5">
      <%= f.submit class: "btn btn-outline-info btn-lg mb-3 shadow" %>
      <%= link_to 'Cancel', articles_path, onclick: "return confirm('Are you sure to cancel?')", class: "btn btn-outline-danger btn-lg shadow" %>
    </div>

  <% end %>
</div>